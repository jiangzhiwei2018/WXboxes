/* pages/password/password.wxss */

.password{
  margin-top: 25rpx;
   background:-moz-linear-gradient(top,#f2f2f2,#fff);/*Mozilla*/
  background:-webkit-gradient(linear,0 50%,100% 50%,from(#f2f2f2),to(#fff));/*Old gradient for webkit*/
  background:-webkit-linear-gradient(top,#f2f2f2,#fff);/*new gradient for Webkit*/
  background:-o-linear-gradient(top,#f2f2f2,#fff); /*Opera11*/
}

text{
  height: 100%;
  font-size: 4vw;
  display: inline-block;
}
.password2{
  color: red;
   background:-moz-linear-gradient(top,#f2f2f2,#fff);/*Mozilla*/
  background:-webkit-gradient(linear,0 50%,100% 50%,from(#f2f2f2),to(#fff));/*Old gradient for webkit*/
  background:-webkit-linear-gradient(top,#f2f2f2,#fff);/*new gradient for Webkit*/
  background:-o-linear-gradient(top,#f2f2f2,#fff); /*Opera11*/
}


page{ 
 height: 100%; 
} 
  
.container { 
 height:auto; 
 display: flex; 
 flex-direction: column; 
 padding: 0; 
 box-sizing: border-box; 
background-color: #f2f2f2;
 background:-moz-linear-gradient(top,#f2f2f2,#fff);/*Mozilla*/
  background:-webkit-gradient(linear,0 50%,100% 50%,from(#f2f2f2),to(#fff));/*Old gradient for webkit*/
  background:-webkit-linear-gradient(top,#f2f2f2,#fff);/*new gradient for Webkit*/
  background:-o-linear-gradient(top,#f2f2f2,#fff); /*Opera11*/

} 
  
/*登录图片*/
.login-icon{ 
 flex: none; 
} 
.login-img{ 
 width: 750rpx; 
} 
  
/*表单内容*/
.submit { 
 margin-top: 20px; 
 flex: auto; 
 height:100%; 
} 
  
.cont { 
 background-color: #fff; 
 line-height: 44px; 
 width: 100%;
 border-radius: 100px;
 background:-moz-linear-gradient(top,#f2f2f2,#fff);/*Mozilla*/
  background:-webkit-gradient(linear,0 50%,100% 50%,from(#f2f2f2),to(#fff));/*Old gradient for webkit*/
  background:-webkit-linear-gradient(top,#f2f2f2,#fff);/*new gradient for Webkit*/
  background:-o-linear-gradient(top,#f2f2f2,#fff); /*Opera11*/
 
} 
/*输入框*/
.nameImage, .keyImage { 
 margin-left: 22px; 
 width: 14px; 
 height: 14px
} 
  
.fontname { 
 margin: 15px 15px 15px 10px; 
 color: #545454; 
 font-size: 14px
} 
.v1 { 
 flex: block; 
 float: right; 
 text-align: right; 
 margin-right: 22px; 
 margin-top: 11px; 
 color: #cccccc; 
 font-size: 14px
} 
  
.line { 
 width: 100%; 
 height: 1px; 
 background-color: #cccccc; 
 margin-top: 1px; 
} 
.loginBtn { 
 width: 80%; 
 margin-top: 35px; 
 border-radius: 100px;
}



